{
  "name": "@twilio-paste/uid-library",
  "version": "2.0.0",
  "category": "library",
  "status": "production",
  "description": "A library to generate unique IDs for use in user interfaces such as forms.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && NODE_ENV=production node build.cjs && tsc",
    "build:js": "NODE_ENV=development node build.cjs",
    "clean": "rm -rf ./dist",
    "tsc": "tsc"
  },
  "dependencies": {
    "react-uid": "2.3.3"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.2 || ^18.0.0",
    "react-dom": "^16.8.6 || ^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
