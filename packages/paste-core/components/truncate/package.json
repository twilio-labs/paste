{
  "name": "@twilio-paste/truncate",
  "version": "2.0.4",
  "category": "typography",
  "status": "alpha",
  "description": "The Truncate component can be used to shorten a string of text that overflows a defined area.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .rpt2_cache",
    "compile": "rollup -c --environment NODE_ENV:production",
    "compile:dev": "rollup -c --environment NODE_ENV:development"
  },
  "peerDependencies": {
    "@twilio-paste/box": "^2.12.2",
    "@twilio-paste/design-tokens": "^6.4.1",
    "@twilio-paste/icons": "^3.11.1",
    "@twilio-paste/style-props": "^1.8.15",
    "@twilio-paste/styling-library": "^0.2.1",
    "@twilio-paste/theme": "^4.1.1",
    "@twilio-paste/types": "^3.0.30",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@twilio-paste/box": "^2.12.2",
    "@twilio-paste/design-tokens": "^6.4.1",
    "@twilio-paste/icons": "^3.11.1",
    "@twilio-paste/style-props": "^1.8.15",
    "@twilio-paste/styling-library": "^0.2.1",
    "@twilio-paste/theme": "^4.1.1",
    "@twilio-paste/types": "^3.0.30"
  }
}
