{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noResolve": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2019",
    "typeRoots": ["./@types", "node_modules/@types", "node_modules/@emotion/jest/types"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@emotion/styled": ["./packages/paste-libraries/styling/node_modules/@emotion/styled"],
      "@emotion/react": ["./packages/paste-libraries/styling/node_modules/@emotion/react"],
      "@emotion/react/types": ["./packages/paste-libraries/styling/node_modules/@emotion/react/types"],
      "@react-spring/web": [
        "./packages/paste-libraries/animation/node_modules/@react-spring/web/dist/react-spring-web.cjs.d.ts"
      ],
      "@react-spring/shared": [
        "./packages/paste-libraries/animation/node_modules/@react-spring/shared",
        "./packages/paste-libraries/animation/node_modules/@react-spring/shared/dist/declarations/src/fluids.d.ts"
      ],
      "@reach/dialog": [
        "./packages/paste-core/primitives/modal-dialog/node_modules/@reach/dialog/dist/declarations/src"
      ],
      "@twilio-paste/styling-library": ["./packages/paste-libraries/styling/src/index.tsx"]
    }
  },
  "include": [
    "packages/**/*",
    "performance-benchmarks/**/*",
    "dangerfile.ts",
    ".danger/**/*",
    "./.jest/@types/index.d.ts",
    "tools/**/*",
    "cypress.config.ts",
    "vite.config.ts"
  ],
  "files": [],
  "references": [{"path": "packages/paste-libraries/styling/tsconfig.json"}],
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "lib",
    "bin",
    "public",
    ".cache",
    ".jest-cache",
    ".next",
    ".yarn",
    "cjs",
    "esm",
    "__testfixtures__"
  ]
}
