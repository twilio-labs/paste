{
  "name": "@twilio-paste/textarea",
  "version": "1.0.0",
  "category": "user input",
  "status": "production",
  "description": "A textarea allows users to enter text on multiple lines",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .rpt2_cache",
    "compile": "rollup -c --environment NODE_ENV:production",
    "compile:dev": "rollup -c --environment NODE_ENV:development",
    "prepublishOnly": "yarn build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react-autosize-textarea": "7.0.0"
  },
  "peerDependencies": {
    "@twilio-paste/box": "^2.10.5",
    "@twilio-paste/design-tokens": "^6.3.2",
    "@twilio-paste/input-box": "^1.0.0",
    "@twilio-paste/style-props": "^1.7.0",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/theme": "^3.2.21",
    "@twilio-paste/types": "^3.0.24",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-uid": "^2.2.0"
  },
  "devDependencies": {
    "@twilio-paste/box": "^2.10.5",
    "@twilio-paste/design-tokens": "^6.3.2",
    "@twilio-paste/input-box": "^1.0.0",
    "@twilio-paste/style-props": "^1.7.0",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/theme": "^3.2.21",
    "@twilio-paste/types": "^3.0.24"
  }
}
