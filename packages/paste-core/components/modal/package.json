{
  "name": "@twilio-paste/modal",
  "version": "0.1.11",
  "category": "overlay",
  "status": "beta",
  "description": "A modal displays content over the main page and blocks any interaction with the page.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .rpt2_cache",
    "compile": "rollup -c --environment NODE_ENV:production",
    "compile:dev": "rollup -cw --environment NODE_ENV:development",
    "prepublishOnly": "yarn build",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.14",
    "@styled-system/css": "^5.1.5",
    "@styled-system/theme-get": "^5.1.2",
    "@twilio-paste/absolute": "^2.0.32",
    "@twilio-paste/box": "^2.4.0",
    "@twilio-paste/button": "^1.1.41",
    "@twilio-paste/design-tokens": "^4.5.0",
    "@twilio-paste/flex": "^0.3.19",
    "@twilio-paste/heading": "^2.0.1",
    "@twilio-paste/icons": "^2.1.2",
    "@twilio-paste/modal-dialog-primitive": "^0.1.2",
    "@twilio-paste/spinner": "^1.2.3",
    "@twilio-paste/style-props": "^1.1.2",
    "@twilio-paste/text": "^2.1.2",
    "@twilio-paste/theme": "^3.1.3",
    "@twilio-paste/types": "^3.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-uid": "^2.2.0",
    "styled-system": "^5.1.2"
  },
  "devDependencies": {
    "@twilio-paste/absolute": "link:../../layout/absolute",
    "@twilio-paste/box": "link:../../primitives/box",
    "@twilio-paste/button": "link:../button",
    "@twilio-paste/design-tokens": "link:../../../paste-design-tokens",
    "@twilio-paste/flex": "link:../../layout/flex",
    "@twilio-paste/heading": "link:../heading",
    "@twilio-paste/icons": "link:../../../paste-icons",
    "@twilio-paste/modal-dialog-primitive": "link:../../primitives/modal-dialog",
    "@twilio-paste/spinner": "link:../spinner",
    "@twilio-paste/style-props": "link:../../../paste-style-props",
    "@twilio-paste/text": "link:../../primitives/text",
    "@twilio-paste/theme": "link:../../../paste-theme",
    "@twilio-paste/types": "link:../../../paste-types"
  }
}
