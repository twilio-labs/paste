{
  "name": "@twilio-paste/design-tokens",
  "version": "10.14.0",
  "description": "Paste Design System Tokens package with a number of different formats for Web, Mobile, and Sketch.",
  "main": "dist/tokens.common.js",
  "module": "dist/esm/tokens.es6.js",
  "types": "dist/tokens.common.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tokens.common.d.ts",
      "import": "./dist/esm/tokens.es6.js",
      "require": "./dist/tokens.common.js"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js",
      "require": "./*.js"
    },
    "./*.js": {
      "import": "./*",
      "require": "./*"
    },
    "./*.json": {
      "import": "./*.json",
      "require": "./*.json"
    },
    "./*.css": {
      "import": "./*.css",
      "require": "./*.css"
    },
    "./*.scss": {
      "import": "./*.scss",
      "require": "./*.scss"
    },
    "./*.xml": {
      "import": "./*.xml",
      "require": "./*.xml"
    }
  },
  "author": "Twilio",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "yarn clean && NODE_ENV=production gulp && NODE_ENV=production node ./tools/build/generateESMPackage.js",
    "build:js": "NODE_ENV=development gulp",
    "build:watch": "gulp dev",
    "clean": "rm -rf ./dist",
    "tokens": "gulp default",
    "test": "jest",
    "tsc": "yarn build"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.6",
    "@types/gulp-if": "^3.0.0",
    "@types/gulp-terser": "^1.2.1",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "gulp-if": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-terser": "^2.0.1",
    "gulp-theo": "2.0.1",
    "lodash": "4.17.21",
    "through2": "^4.0.2"
  }
}
