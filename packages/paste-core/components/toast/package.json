{
  "name": "@twilio-paste/toast",
  "version": "0.1.4",
  "category": "feedback",
  "status": "beta",
  "description": "A toast communicates an immediate and direct response to a user action.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "build:props": "typedoc --tsconfig ./tsconfig.json --json ./dist/prop-types.json",
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .rpt2_cache",
    "compile": "rollup -c --environment NODE_ENV:production",
    "compile:dev": "rollup -c --environment NODE_ENV:development",
    "prepublishOnly": "yarn build",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@twilio-paste/box": "^2.11.1",
    "@twilio-paste/button": "^2.3.14",
    "@twilio-paste/design-tokens": "^6.3.3",
    "@twilio-paste/icons": "^3.5.6",
    "@twilio-paste/media-object": "^1.2.62",
    "@twilio-paste/reakit-library": "^0.7.2",
    "@twilio-paste/spinner": "^2.0.20",
    "@twilio-paste/stack": "^0.1.42",
    "@twilio-paste/style-props": "^1.8.1",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/theme": "^3.2.22",
    "@twilio-paste/types": "^3.0.25",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-uid": "^2.2.0"
  },
  "devDependencies": {
    "@twilio-paste/box": "^2.11.1",
    "@twilio-paste/button": "^2.3.14",
    "@twilio-paste/design-tokens": "^6.3.3",
    "@twilio-paste/icons": "^3.5.6",
    "@twilio-paste/media-object": "^1.2.62",
    "@twilio-paste/reakit-library": "^0.7.2",
    "@twilio-paste/spinner": "^2.0.20",
    "@twilio-paste/stack": "^0.1.42",
    "@twilio-paste/style-props": "^1.8.1",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/theme": "^3.2.22",
    "@twilio-paste/types": "^3.0.25"
  }
}
