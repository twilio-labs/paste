    "@twilio-paste/style-props": "^1.8.8",
    "@twilio-paste/styling-library": "^0.1.4",
    "@twilio-paste/text": "^2.3.15",
    "@twilio-paste/theme": "^3.3.1",
    "@twilio-paste/tooltip-primitive": "^0.1.7",
    "@twilio-paste/types": "^3.0.29",
    "@twilio-paste/uid-library": "^0.1.1"
  }
