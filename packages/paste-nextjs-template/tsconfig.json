{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "emitDeclarationOnly":  false,
    "esModuleInterop": true,
    "incremental": false,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
