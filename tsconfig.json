{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noResolve": false,
    "paths": {
      "*": ["./@types/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["./@types", "node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*", "dangerfile.ts", ".danger/**/*"],
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "lib",
    "bin",
    "public",
    ".cache",
    ".next",
    ".yarn",
    "cjs",
    "esm",
    "__testfixtures__"
  ]
}
