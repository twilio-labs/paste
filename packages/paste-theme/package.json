{
  "name": "@twilio-paste/theme",
  "version": "3.2.20",
  "description": "Paste Design System Theme Package which provides support for APIs to theme UIs and components.",
  "author": "Twilio Inc.",
  "license": "MIT",
  "main:dev": "src/index.tsx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:dev": "yarn clean && yarn compile:dev",
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo && rm -rf .rpt2_cache",
    "compile": "rollup -c --environment NODE_ENV:production",
    "compile:dev": "rollup -c --environment NODE_ENV:development",
    "prepublishOnly": "yarn build",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@twilio-paste/animation-library": "^0.2.1",
    "@twilio-paste/design-tokens": "^6.3.1",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/types": "^3.0.23",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@twilio-paste/animation-library": "^0.2.1",
    "@twilio-paste/design-tokens": "^6.3.1",
    "@twilio-paste/styling-library": "^0.1.2",
    "@twilio-paste/types": "^3.0.23"
  }
}
